const phoneData = JSON.parse('<%- JSON.stringify(ps) %>')
const caseMaterialSelector = document.getElementById('case_material');
const brandSelector = document.getElementById('phone_brand');
const modelSelector = document.getElementById('phone_model');
const pricetag = document.getElementById('dPrice')
const uniqueBrands = [...new Set(phoneData.map(item => item.brand))];
brandSelector.innerHTML = '<option value="">Select Brand</option>';
uniqueBrands.forEach(brand => {
    const option = document.createElement('option');
    option.value = brand;
    option.text = brand;
    brandSelector.appendChild(option);
});

brandSelector.addEventListener('change', () => {
    const selectedBrand = brandSelector.value;
    if (selectedBrand) {
        const brandModels = phoneData
            .filter(item => item.brand === selectedBrand && item.case_material === caseMaterialSelector.value)
            .map(item => item.model);
        
        modelSelector.innerHTML = '<option value="">Select Model</option>';
        brandModels.forEach(model => {
            const option = document.createElement('option');
            option.value = model;
            option.text = model;
            modelSelector.appendChild(option);
        });
    } else {
        modelSelector.innerHTML = '<option value="">Select Model</option>';
    }
});


modelSelector.addEventListener('change', updatePrice);
caseMaterialSelector.addEventListener('change', updatePrice);


function updatePrice() {
    const selectedBrand = brandSelector.value;
    const selectedModel = modelSelector.value;
    const selectedCaseMaterial = caseMaterialSelector.value;

    if (selectedBrand && selectedModel) {
        const selectedProduct = phoneData.find(item => 
            item.brand === selectedBrand && 
            item.model === selectedModel && 
            item.case_material === selectedCaseMaterial
            
        );
        console.log(selectedProduct.price)
        if (selectedProduct) {
            pricetag.innerHTML = `₹${selectedProduct.price}`;
        } else {
            pricetag.innerHTML = '₹0';
        }
    }
}
</script>
