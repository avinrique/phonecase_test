<div id="cartItemsContainer"></div>
<script>
  function displayCartItems() {
    const cartItemsContainer = document.getElementById('cartItemsContainer');
    const cartItems = JSON.parse(localStorage.getItem('cartIT'));

    if (!cartItems || cartItems.length === 0) {
      cartItemsContainer.innerHTML = '<p><h3><center>Currently, your Shopping Cart is empty.</center></h3></p>';
      return;
    }

    cartItemsContainer.innerHTML = ''; 
    cartItems.forEach(item => {
      const cartItemElement = document.createElement('div');
      cartItemElement.classList.add('card', 'rounded-3', 'mb-4');
      console.log(item)
      if(item.case_material == "softcase"){
        item.price = 199
      }
      if(item.case_material == "hardcase"){
        item.price = 250
      }
      if(item.case_material == "metalcase"){
        item.price = 300
      }
      if(item.case_material == "glasscase"){
        item.price =  350
      }
      cartItemElement.innerHTML = `
      <div class="card-body p-4">
        <div class="row d-flex justify-content-between align-items-center">
          <div class="col-md-2 col-lg-2 col-xl-2">
            <img src="/pic/${item.imageurl}" class="img-fluid rounded-3" alt="${item.imagename}">
          </div>
          <div class="col-md-3 col-lg-3 col-xl-3">
            <p class="lead fw-normal mb-2">${item.imagename}</p>
            <p><span class="text-muted">Case Type: </span>${item.case_material}</p>
            <p><span class="text-muted">Brand: </span>${item.phonebrand}</p>
            <p><span class="text-muted">Model: </span>${item.phonemodel}</p>
          </div>
          <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
            <input min="0" name="quantity" value="1" type="number" class="form-control form-control-sm" />
          </div>
          <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
            <h5 class="mb-0">RS. ${item.price}</h5>
          </div>
          <div class="col-md-1 col-lg-1 col-xl-1 text-end">
            <button type="button" class="close" aria-label="Close" id="close" onclick="removecartm, cv">
              <span aria-hidden="true">&times;</span>
            </button>
            <i class="fas fa-trash fa-lg text-danger" onclick="removeCartItem('${item.imagename}')"></i>
          </div>
        </div>
      </div>
    `;

      cartItemsContainer.appendChild(cartItemElement);
    });

    // Add the "Proceed to Pay" button after the cart items
    const proceedButton = document.createElement('button');
    proceedButton.type = 'button';
    proceedButton.dataset.mdbButtonInit = true;
    proceedButton.dataset.mdbRippleInit = true;
    proceedButton.className = 'btn btn-proceed btn-block btn-lg';
    proceedButton.style.cssText = 'background-color: #007bff; color: white; border: none; outline: none; box-shadow: none;';
    proceedButton.textContent = 'Proceed to Pay';
    cartItemsContainer.appendChild(proceedButton);
  }

  // Call the function to display cart items when the page loads
  window.onload = displayCartItems;
</script>

